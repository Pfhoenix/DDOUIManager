<Window x:Class="DDOUIManager.SkinAssetTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDOUIManager"
        mc:Ignorable="d"
        Title="Skin Asset Tree" Height="456" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel>
		<TreeView Name="tvAssetTree" Height="400"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Name="btnLoadFolder" Margin="3,3,3,0">From Folder</Button>
			<Button Name="btnLoadFile" Grid.Column="1" Margin="3,3,3,0">From File</Button>
			<Button Name="btnCompare" Grid.Column="2" Margin="3,3,3,0" IsEnabled="False">Compare</Button>
			<Button Name="btnSave" Grid.Column="3" Margin="3,3,3,0" IsEnabled="False">Save</Button>
		</Grid>
	</StackPanel>
</Window>
